realvalued mu0,mu1,mu2,mu3,y0,y1,y2,y3,d0,d1,d1,d3,x0,x1,x2,x3;
order y0,y1,y2,y3,mu0,mu1,mu2,mu3,d0,d1,d1,d3,x,x0,x1,x2,x3;
load_package "rlfi";
LALINE!* := 120;
off verbatim;
