% cubic
%------------------------------------------------------
% nu(x) = nu0 + nu1*(x-x0) + nu2*(x-x0)*(x-x1) 
%       + nu3*(x-x0)*(x-x1)*(x-x2)
% dnu(x) = nu1 + nu2*((x-x0) + (x-x1)) 
%  + nu3*(((x-x0)*(x-x1)) + ((x-x1)*(x-x2)) + ((x-x2)*(x-x0)))

c := { 
y0 = nu0 
,
d0 = nu1 + nu2*x01 + nu3*x01*x01/2
, 
y1 = nu0 - nu1*x01
, 
d1 = nu1 - nu2*x01 + nu3*x01*x01/2
};

v := { nu0, nu1, nu2, nu3 };
s := solve(c,v);
first(s);
out "doc/interpolation/newton-yd2.rawtex"$
on latex;
on exp$
write c;
on lasimp;
write s;
off latex;      
shut "doc/interpolation/newton-yd2.rawtex";
%------------------------------------------------------
% nu(x) = nu0 + nu1*(x-x0) + nu2*(x-x0)*(x-x1) 
%       + nu3*(x-x0)*(x-x1)*(x-x2)
% dnu(x) = nu1 + nu2*((x-x0) + (x-x1)) 
%  + nu3*(((x-x0)*(x-x1)) + ((x-x1)*(x-x2)) + ((x-x2)*(x-x0)))

c := { 
y0 = nu0 
,
d0 = nu1 + nu2*(x0-x1) + nu3*(x0-x1)^2/2
, 
y1 = nu0 - nu1*(x0-x1)
, 
d1 = nu1 - nu2*(x0-x1) + nu3*(x0-x1)^2/2
,
0 = nu1 + nu2*((x-x0)+(x-x1)) 
+ nu3*((x-x0)*(x-x1) + (x-x1)*(x-(x0+x1)/2) + (x-x0)*(x-(x0+x1)/2))  
};

v := { nu0, nu1, nu2, nu3, x };
s := solve(c,v);
first(s);
out "doc/interpolation/newton-yd2-argmin.rawtex"$
on latex;
on exp$
write c;
on lasimp;
write s;
off latex;      
shut "doc/interpolation/newton-yd2-argmin.rawtex";
%------------------------------------------------------
% nu(x) = nu0 + nu1*(x-x0) + nu2*(x-x0)*(x-x1) 
%       + nu3*(x-x0)*(x-x1)*(x-x2)
