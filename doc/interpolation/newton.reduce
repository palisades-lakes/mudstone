%------------------------------------------------------
% quadratic
%------------------------------------------------------
% nu(x) = nu0 + nu1*(x-x0) + nu2*(x-x0)*(x-x1) 
% dnu(x) = nu1 + nu2*((x-x0) + (x-x1))

c := { 
y0 = nu0 
, 
y1 = nu0 + nu1*(x1-x0) + nu2*(x1-x0)*(x1-x1)
, 
d1 = nu1 + nu2*(x1-x0)
};

v := { nu0, nu1, nu2 };
s := solve(c,v);
out "doc/interpolation/newton-yyd.rawtex"$
on latex;
on exp$
write c;
on lasimp;
write s;
off latex;      
shut "doc/interpolation/newton-yyd.rawtex";
%------------------------------------------------------
c := { 
